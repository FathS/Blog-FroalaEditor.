@model MyBlog.Models.View.WriteModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Merhaba @ViewBag.session Blog Sayfama Hoş Geldiniz. Umuyorum Aradığınızı Bulacaksınız. <i class="far fa-smile-beam"></i> </h3>
<div>
    Buralarda yazılar olacak........
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Mesaj</th>
    </tr>

    @foreach (var item in Model.WriteList)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Mesaj</td>
            <td>@{ WriteLiteral(@item.Mesaj); }</td>

        </tr>
    }
</table>

